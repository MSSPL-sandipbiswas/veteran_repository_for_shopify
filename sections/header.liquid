<header class="bg-white">
    <div class="container mx-auto">
        <div class="header-inner flex justify-between items-center">
            {%  if section.settings.site_logo %}  
                <div class="site-logo"><a href="{{ routes.root_url }}">{{ section.settings.site_logo | image_url: width: 200 | image_tag }}</a></div>
            {% endif %} 
            <nav class="primary-navigation" id="site-navigation">
                <ul class="flex items-center menu-wrapper">
                    {% for link in linklists.main-menu.links %}
                    <li class="text-blue {% if link.active == true %}current-menu-item {% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                </ul>
            </nav>
           
            <div class="navopction">
                <ul class="navopction_menu flex items-center">
                    <li class="myaccount_icon text-blue"><a href="{{ routes.account_login_url }}"> <span class="icon-my-accout-icon"></span></a></li>
                    <li class="navcart"><a href="{{ routes.cart_url }}"><span class="icon-cart-icon"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</header>

{% schema %}
{
    "name": "Header",
    "settings": [
            {
                "type": "image_picker",
                "id": "site_logo",
                "label": "Logo"
            }
        ]
}
{% endschema %}